# 应用配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
APP_NAME="AI English Assistant"
APP_VERSION=1.0.0

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/english_assistant
DB_NAME=english_assistant
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Qdrant向量数据库配置
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# 其他AI服务（可选）
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
COHERE_API_KEY=

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,docx

# 缓存配置
CACHE_TTL=3600  # 1小时
CACHE_MAX_SIZE=1000

# 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin
METRICS_ENABLED=true

# 日志配置
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# 会话配置
SESSION_TIMEOUT=1800  # 30分钟
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900  # 15分钟

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# 开发配置
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_PROFILER=false

# 测试配置
TEST_DATABASE_URL=sqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/1

# 生产配置
PROD_WORKERS=4
PROD_MAX_REQUESTS=1000
PROD_MAX_REQUESTS_JITTER=100
PROD_TIMEOUT=30
PROD_KEEPALIVE=2